{% block body%}

    <div id="wrapper">
        <div id="container">
            <h1>Login Required</h1>
            <fieldset>
                <p>
                    <label>Username</label>
                    <input class="username" type="text" id="username"/>
                    <label>Password</label>
                    <input class="password" type="password" id="password" />

                    <a href="#" class="login">Login</a>
                    <a href="#" class="forgotPassword">Forgot Password</a>
                </p>
            </fieldset>
        </div>
    </div>

{% endblock body%}

<style>
    body { background: #880000; font: 18px/1.5 sans-serif; }
    #wrapper { background: white; margin: 10em auto; width: 380px; height: 350px; padding: 0px }
    #container { padding: 2em; }
    legend { font-size: 20px}
    fieldset { border: double; border-color: #910b8e; height: 170px }
    label {font-size: 15px; padding: 10px; font-family: "Times New Roman" }
    h1 { font-size: 25px; text-align: center; font-family: "Times New Roman"}
    h2 { font-size: 18px; text-align: left; }

    .username {
        position: relative;
        top: 00px;
        left: 2px;
    }

    .password {
        position: relative;
        top: 0px;
        left: 6px;
    }

    .login {
        background-color: #0000F0;
        border-radius: 30px;
        border: 1px solid;
        display: inline-block;
        cursor: hand;
        color: #FFFFFF;
        font-family: "Times New Roman";
        font-size: 15px;
        padding: 16px 31px;
        text-decoration: none;
        position: relative;
        top: 30px;
    }
    .login:hover {
        background: green;
    }
    .login:active {
        position: relative;
        top: 1px;
    }

    .forgotPassword {
        background-color: #0000F0;
        border-radius: 30px;
        border: 1px solid;
        display: inline-block;
        cursor: hand;
        color: #FFFFFF;
        font-family: "Times New Roman";
        font-size: 15px;
        padding: 16px 31px;
        text-decoration: none;
        position: relative;
        top: 30px;
    }
    .forgotPassword:hover {
        background: green;

    }
    .forgotPassword:active {
        position: relative;
        top: 1px;
    }

</style>